---
interface Props {
    icon: string;
    title: string;
    description: string;
    href?: string;
}

const { icon, title, description, href = "#" } = Astro.props;
---

<a href={href} class="service-card">
    <div class="icon-box">
        <span class="material-icon">{icon.slice(0, 2).toUpperCase()}</span>
    </div>
    <h3 class="card-title">{title}</h3>
    <p class="card-desc">{description}</p>
    <span class="learn-more">Learn more &rarr;</span>
</a>

<style>
    .service-card {
        display: flex;
        flex-direction: column;
        gap: var(--space-sm);
        padding: var(--space-md);
        background-color: var(--color-surface);
        border: 1px solid var(--color-border);
        transition: all 0.3s cubic-bezier(0.25, 1, 0.5, 1);
        height: 100%;
        position: relative;
    }

    .service-card:hover {
        background-color: var(--color-border);
        color: var(--color-bg);
        transform: translate(-4px, -4px);
        box-shadow: 8px 8px 0px var(--color-accent);
    }

    .service-card:hover .card-desc,
    .service-card:hover .learn-more,
    .service-card:hover .icon-box,
    .service-card:hover .card-title {
        color: var(--color-bg);
    }

    .service-card:hover .icon-box {
        background-color: var(--color-accent);
    }

    .icon-box {
        width: 48px;
        height: 48px;
        background-color: var(--color-accent-soft);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--color-accent);
        margin-bottom: var(--space-xs);
        font-family: var(--font-heading);
        font-size: 1.5rem;
        transition: inherit;
    }

    .card-title {
        font-family: var(--font-heading);
        font-size: 2rem;
        letter-spacing: -0.02em;
        transition: inherit;
    }

    .card-desc {
        color: var(--color-muted);
        line-height: 1.5;
        flex-grow: 1;
        transition: inherit;
    }

    .learn-more {
        margin-top: var(--space-sm);
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--color-accent);
        font-size: 0.85rem;
        transition: inherit;
    }
</style>
